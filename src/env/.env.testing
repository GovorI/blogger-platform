# Testing Environment Configuration

# App
PORT=3001
GLOBAL_PREFIX=api

# Database
MONGODB_URI=mongodb://127.0.0.1:27017/blog-platform-test-db

# Swagger disabled for testing
IS_SWAGGER_ENABLED=false

# Auto-confirm users for testing (no email sending required)
IS_USER_AUTOMATICALLY_CONFIRMED=true

# Show error details in testing
SEND_INTERNAL_SERVER_ERROR_DETAILS=true

# Enable testing module for cleanup operations
INCLUDE_TESTING_MODULE=true

# JWT
JWT_SECRET=test_jwt_secret_key
JWT_ACCESS_EXPIRES_IN=10s
JWT_REFRESH_EXPIRES_IN=20s

# Mailer (SMTP) - disabled for testing
MAIL_HOST=smtp.test.com
MAIL_PORT=587
MAIL_SECURE=false
MAIL_USER=test@test.com
MAIL_PASS=testpass
MAIL_FROM=test@test.com
MAIL_TLS_REJECT_UNAUTHORIZED=false

# Rate limiter (more permissive for testing)
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=10000