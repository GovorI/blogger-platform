{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": [
      "ts-jest",
      {
        "tsconfig": {
          "module": "commonjs",
          "target": "es2018",
          "experimentalDecorators": true,
          "emitDecoratorMetadata": true
        }
      }
    ]
  },
  "modulePathIgnorePatterns": [
    "<rootDir>/dist/"
  ]
}